<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<fx:root style="-fx-background-color: #242424;" type="HBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Group>
                     <children>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Product Quantity Histogram" textAlignment="CENTER" textFill="#e797fd">
                           <font>
                              <Font size="17.0" />
                           </font>
                        </Label>
                     </children>
                  </Group>
                  <LineChart fx:id="quantityLineChart" legendVisible="false" prefHeight="150.0" prefWidth="174.0">
                     <xAxis>
                        <NumberAxis side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis side="LEFT" />
                     </yAxis>
                  </LineChart>
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Group>
                     <children>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Product Sales Histogram" textAlignment="CENTER" textFill="#e797fd">
                           <font>
                              <Font size="17.0" />
                           </font>
                        </Label>
                     </children>
                  </Group>
                  <LineChart fx:id="salesLineChart" legendVisible="false" prefHeight="150.0" prefWidth="238.0">
                     <xAxis>
                        <NumberAxis side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis side="LEFT" />
                     </yAxis>
                  </LineChart>
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #242424;" HBox.hgrow="ALWAYS">
         <children>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Top Selling Products" textAlignment="CENTER" textFill="#e797fd" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <VBox fx:id="productList" minWidth="150.0">
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>
               <children>
                  <StackPane fx:id="statisticsListPanelPlaceholder" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
   </children>
</fx:root>
