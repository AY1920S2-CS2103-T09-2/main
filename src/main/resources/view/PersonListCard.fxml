<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPanePerson" fx:id="cardPanePerson" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
      </HBox>
      <FlowPane fx:id="tags" />
         <HBox>
            <children>
               <Label text="Phone" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                     <Insets right="10.0" />
                  </HBox.margin>
               </Label>
               <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" HBox.hgrow="ALWAYS" />
            </children>
         </HBox>
         <HBox>
            <children>
               <Label minWidth="-Infinity" text="Address">
                  <HBox.margin>
                     <Insets right="10.0" />
                  </HBox.margin>
               </Label>
               <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="address" styleClass="cell_small_label" text="Address: \$address" wrapText="true" textAlignment="RIGHT"/>
            </children>
         </HBox>
         <HBox>
            <children>
               <Label text="Email" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                     <Insets right="10.0" />
                  </HBox.margin>
               </Label>
               <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="email" styleClass="cell_small_label" text="Email: \$email" />
            </children>
         </HBox>
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
